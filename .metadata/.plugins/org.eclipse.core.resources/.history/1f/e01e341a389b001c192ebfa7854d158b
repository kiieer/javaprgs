package com.revature.assignment;

import java.util.jar.Attributes.Name;

import io.javalin.Javalin;

public class Assignment {
	public static void main(String[] args) {
		Javalin app = Javalin.create().start();
		
		//Lowercase: http://localhost:8080/lowercase/KiErStEn
		app.get("/lowercase/{name}", ctx->{
			String name = ctx.pathParam("name");
			ctx.result(name.toLowerCase());});
	
		//Uppercase: http://localhost:8080/uppercase/KiErStEn
		app.get("/uppercase/{name}", ctx->{
		String name = ctx.pathParam("name");
		ctx.result(name.toUpperCase());});
		
		app.get("/length/{name}", ctx->{
			String name = ctx.pathParam("name");
			ctx.result(name.length());});
}	
}
