package com.revature.java.store;

public class Customer {
	private String name;
	private double purchaseAmt;
	private double prevPurchaseAmts;
	public final int storeID = 4162;
	public static String location = "Cleveland, Georgia";
	double collective;
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getPurchaseAmt() {
		return purchaseAmt;
	}

	public void setPurchaseAmt(double purchaseAmt) {
		this.purchaseAmt = purchaseAmt;
	}


	public double getPrevPurchaseAmts() {
		return prevPurchaseAmts;
	}

	public void setPrevPurchaseAmts(double prevPurchaseAmts, double purchaseAmt) {
		this.prevPurchaseAmts = prevPurchaseAmts;
		this.collective = prevPurchaseAmts + purchaseAmt;
	}

	
	public Customer(String name, double purchaseAmt, double prevPurchaseAmts) {
		super();
		this.name = name;
		this.purchaseAmt = purchaseAmt;
		this.prevPurchaseAmts = prevPurchaseAmts;
	}

	@Override
	public String toString() {
		return "STORE " + storeID + " (" + location + ") | Customer [name = " + name + ", today's purchase amount = $" + purchaseAmt + ". Total sales before: " + prevPurchaseAmts + ". New total: " + collective + "]";
		
	}
}
	


